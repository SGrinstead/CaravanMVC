@model Wagon

<h1>@Model.Name</h1>

@if(Model.Covered)
{
	<p>Covered wagon with @Model.NumWheels wheels</p>
}
else
{
	<p>Uncovered wagon with @Model.NumWheels wheels</p>
}

<h3>@Model.Passengers.Count Passengers</h3>
<ul>
	@foreach(var passenger in Model.Passengers)
	{
		<li>@passenger.Name, Age @passenger.Age, Destination: @passenger.Destination</li>
	}
</ul>

<a href="/wagons/@Model.Id/passengers/new">Add a Passenger</a>